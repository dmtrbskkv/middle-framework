{% extends "/layouts/dashboard.twig" %}

{% block title %}Login{% endblock %}

{% block content %}
    <div class="container mx-auto  text-gray-800">
        <form action="" method="post" class="flex flex-col justify-start items-center mt-12">
            <h1 class="text-6xl mb-12">Login page</h1>
            <div class="mb-3 w-1/3">
                {% include '/components/input.twig' with {'placeholder':'Login', 'name':'login'} %}
            </div>
            <div class="mb-6 w-1/3">
                {% include '/components/input.twig' with {'placeholder':'Password', 'name':'password'} %}
            </div>
                <Button class="w-1/3 py-3 rounded-md font-semibold bg-blue-600 text-white mb-1">Sing in</Button>
                <a href="/register" class="block text-sm py-3 px-6 text-blue-500">Register</a>
        </form>
    </div>
{% endblock %}

